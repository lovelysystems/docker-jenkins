job('pull-job') {
    description 'clone repo with cron-jobs and configure jenkins to run them.'
    scm {
        git {
            remote {
                github 'barnabasj/jenkins-jobs', 'ssh'
                credentials 'github-credentials'
            }
        }
    }
    steps {
        gradle 'rest -Dpattern=jobs/* -DbaseUrl=http://localhost:8080 -Dusername=admin -Dpassword=admin'
    }
    triggers {
        scm '* * * * *'
    }
}
